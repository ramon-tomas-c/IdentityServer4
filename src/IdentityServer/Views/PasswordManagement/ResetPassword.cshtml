@{
    Layout = "_Layout";
}

@model IdentityServer.Models.Account.ResetPasswordModel

<br />
<br />
<div class="col-sm-6 col-sm-offset-2">
    <partial name="_ValidationSummary" />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@PasswordRecovery.ResetPasswordPageTitle</h3>
        </div>
        <div class="panel-body">
            <form asp-action="ResetPassword" asp-controller="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" required/>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordCheck"></label>
                    <input type="password" asp-for="PasswordCheck" class="form-control" required/>
                </div>
                <button class="btn btn-primary btn-block">@PasswordRecovery.ResetPassword</button>
            </form>
        </div>
    </div>
</div>
